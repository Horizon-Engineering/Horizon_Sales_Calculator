<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_toEndOf="@+id/textView29" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/nextBtn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:id="@+id/backBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Consumption By Existing System"
        android:id="@+id/textView23"
        android:layout_above="@+id/backBtn"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Power Consumption By Replacement System"
        android:layout_below="@+id/graph"
        android:layout_alignEnd="@+id/textView23"
        android:id="@+id/textView24"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_alignBottom="@+id/textView23"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout2">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/replacementPower"
        android:text="replacement"
        android:layout_alignTop="@+id/textView27"
        android:layout_toStartOf="@+id/textView27"
        android:layout_marginEnd="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="KWh/month"
        android:id="@+id/textView27"
        android:layout_alignTop="@+id/textView24"
        android:layout_toStartOf="@+id/nextBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="KWh/month"
        android:id="@+id/textView26"
        android:layout_alignTop="@+id/existingPower"
        android:layout_toEndOf="@+id/textView28" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView28"
        android:layout_alignBottom="@+id/textView27"
        android:layout_toStartOf="@+id/textView27" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/existingPower"
        android:text="replacement"
        android:layout_below="@+id/textView24"
        android:layout_alignStart="@+id/replacementPower" />

    <TextView
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="KWh"
        android:gravity="center"
        android:id="@+id/textView29"
        android:rotation="-90"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/textView23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Months"
        android:id="@+id/textView31"
        android:layout_above="@+id/replacementPower"
        android:layout_centerHorizontal="true" />

</RelativeLayout>